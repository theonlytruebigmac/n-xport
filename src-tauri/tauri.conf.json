{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "N-xport Data Tool",
  "version": "0.1.9",
  "identifier": "com.fraziersystems.nc-data-export",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "N-xport Data Tool",
        "width": 1000,
        "height": 760,
        "minWidth": 900,
        "minHeight": 680,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Export data from N-Central via REST API",
    "longDescription": "Cross-platform tool to export customer data from N-Central RMM using the REST API with rate limiting and async support.",
    "publisher": "FrazierSystems",
    "copyright": "Â© 2026 FrazierSystems",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEIyMjdCOEU1MUQ3NUVEODEKUldTQjdYVWQ1Ymduc3YzWk1GQk9rWmN2YWpPM3lUVCtnUk5uYWtZTEFiVFpCdkovZWJtN1dRR2gK",
      "endpoints": [
        "https://github.com/theonlytruebigmac/n-xport/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}